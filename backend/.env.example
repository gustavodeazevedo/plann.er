# Configurações do servidor
PORT=3333
NODE_ENV=development

# Banco de dados
MONGODB_URI=mongodb://localhost:27017/planner
# ou para MongoDB Atlas:
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/planner

# Segurança e autenticação
JWT_SECRET=sua_chave_secreta_jwt_aqui

# Configurações de CORS (para produção)
CORS_ORIGIN=https://seu-frontend-em-producao.com.br

# URLs
FRONTEND_URL=http://localhost:5173

# SendGrid (para envio de emails)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@yourapp.com

# Cloudinary (para armazenamento de arquivos)
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here