# Configurações do servidor
PORT=3333
NODE_ENV=development

# Banco de dados
MONGODB_URI=mongodb://localhost:27017/planner
# ou para MongoDB Atlas:
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/planner

# Segurança e autenticação
JWT_SECRET=sua_chave_secreta_jwt_aqui

# Configurações de CORS (para produção)
CORS_ORIGIN=https://seu-frontend-em-producao.com.br

# URLs
FRONTEND_URL=http://localhost:5173

# Resend (para envio de emails)
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM_EMAIL=your_verified_domain@resend.dev

# Vercel Blob (para armazenamento de arquivos)
BLOB_READ_WRITE_TOKEN=vercel_blob_token_here